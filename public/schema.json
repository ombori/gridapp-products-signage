{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Product signage",
  "properties": {
    "app": {
      "type": "object",
      "title": "Application",
      "properties": {
        "product": {
          "type": "object",
          "title": "Product"
        },
        "animationDuration": {
          "type": "number",
          "title": "Animation duration (total, minimum is 2000 ms)",
          "default": 7000
        },
        "animationType": {
          "type": "string",
          "title": "Animation type",
          "enum": ["fade", "move", "popin"],
          "default": "move"
        },
        "callToAction": {
          "type": "string",
          "title": "Call to action text",
          "default": ""
        },
        "background": {
          "type": "object",
          "title": "Background image",
          "properties": {
            "media": {
              "type": "object"
            }
          }
        },
        "backgroundColor": {
          "type": "string",
          "title": "Background color",
          "default": "#ffffff"
        },
        "globalStyles": {
          "type": "string",
          "title": "Custom styles"
        }
      },
      "required": ["product", "background", "backgroundColor", "animationDuration"]
    }
  },
  "required": ["app"]
}
