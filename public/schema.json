{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "Product signage",
    "definitions": {
        "playlist": {
            "type": "array",
            "minItems": 1,
            "maxItems": 1,
            "items": {
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string",
                        "title": "Item type",
                        "enum": [
                            "MEDIA",
                            "PRODUCT"
                        ],
                        "enumNames": [
                            "MEDIA",
                            "PRODUCT"
                        ]
                    }
                },
                "dependencies": {
                    "type": {
                        "oneOf": [
                            {
                                "properties": {
                                    "type": {
                                        "enum": [
                                            "MEDIA"
                                        ]
                                    },
                                    "media": {
                                        "title": "Media",
                                        "type": "object",
                                        "properties": {
                                            "ref": {
                                                "const": "media"
                                            },
                                            "type": {
                                                "type": "string",
                                                "enum": [
                                                    "video/mp4",
                                                    "video/webm",
                                                    "image/png",
                                                    "image/jpeg",
                                                    "image/gif"
                                                ]
                                            },
                                            "id": {
                                                "type": "string"
                                            }
                                        },
                                        "dependencies": {
                                            "type": {
                                                "oneOf": [
                                                    {
                                                        "properties": {
                                                            "type": {
                                                                "type": "string",
                                                                "enum": [
                                                                    "video/mp4",
                                                                    "video/webm",
                                                                    "image/png",
                                                                    "image/jpeg",
                                                                    "image/gif"
                                                                ]
                                                            }
                                                        },
                                                        "required": [
                                                            "ref",
                                                            "type",
                                                            "id"
                                                        ]
                                                    }
                                                ]
                                            }
                                        }
                                    }
                                },
                                "dependencies": {
                                    "media": {
                                        "oneOf": [
                                            {
                                                "properties": {
                                                    "media": {
                                                        "properties": {
                                                            "type": {
                                                                "enum": [
                                                                    "image/png",
                                                                    "image/jpeg",
                                                                    "image/gif"
                                                                ]
                                                            }
                                                        }
                                                    },
                                                    "duration": {
                                                        "title": "Duration (ms)",
                                                        "type": "number",
                                                        "default": 5000
                                                    }
                                                },
                                                "required": [
                                                    "duration"
                                                ]
                                            },
                                            {
                                                "properties": {
                                                    "media": {
                                                        "properties": {
                                                            "type": {
                                                                "enum": [
                                                                    "video/mp4",
                                                                    "video/webm"
                                                                ]
                                                            }
                                                        }
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                },
                                "required": [
                                    "media"
                                ]
                            },
                            {
                                "properties": {
                                    "type": {
                                        "enum": ["PRODUCT"]
                                    },
                                    "product": {
                                        "type": "object",
                                        "title": "Product"
                                    },
                                    "duration": {
                                        "title": "Duration (ms)",
                                        "type": "number",
                                        "default": 5000
                                    }
                                },
                                "required": ["product", "duration"]
                            }
                        ]
                    }
                },
                "required": ["type"]
            }
        }
    },
    "properties": {
        "app": {
            "type": "object",
            "title": "Application",
            "properties": {
                "products": {
                    "type": "array",
                    "minItems": 1,
                    "title": "Products media",
                    "$ref": "#/definitions/playlist"
                },
                "animationDuration": {
                    "type": "number",
                    "title": "Animation duration (total, minimum is 2000 ms)",
                    "default": "70000"
                },
                "callToAction": {
                    "type": "string",
                    "title": "Call to action text",
                    "default": ""
                },
                "background" : {
                    "type": "object",
                    "title": "Background image",
                    "properties": {
                        "media": {
                            "type": "object"
                        }
                    }
                },
                "backgroundColor": {
                    "type": "string",
                    "title": "Background color",
                    "default": "#ffffff"
                },
                "globalStyles": {
                    "type": "string",
                    "title": "Custom styles"
                }
            },
            "required": [
                "products",
                "background",
                "backgroundColor"
            ]
        }
    },
    "required": [
        "app"
    ]
}